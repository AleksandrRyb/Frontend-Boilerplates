{
  "name": "app-react",
  "description": "Stable version of a basic SPA example with SCSS, React (Hooks) and TypeScript.",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "react-app-rewired test",
    "test:e2e:cypress": "cypress run",
    "test:e2e": "start-server-and-test start http-get://localhost:3000 test:e2e:cypress",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "tslint \"./src/**/*.{ts,tsx}\" --format stylish",
    "lint:styles": "stylelint \"./src/**/*.scss\""
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@types/jest": "24.0.16",
    "@types/node": "12.6.9",
    "@types/react": "16.8.24",
    "@types/react-dom": "16.8.5",
    "bootstrap": "^4.3.1",
    "i18next": "^17.0.8",
    "inversify-hooks": "^1.3.2",
    "node-sass": "^4.12.0",
    "normalize-scss": "^7.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-i18next": "^10.11.5",
    "react-scripts": "3.0.1",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "cypress": "^3.4.1",
    "husky": "^3.0.2",
    "react-app-rewired": "^2.1.3",
    "start-server-and-test": "^1.9.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.9.3",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0"
  },
  "repository": "https://github.com/CKGrafico/Frontend-Boilerplates#frontend-boilerplates",
  "author": "https://github.com/CKGrafico/Frontend-Boilerplates#-contributors"
}
