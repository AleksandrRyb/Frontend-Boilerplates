{
  "name": "app-react",
  "description": "Stable version of a basic SPA example with SCSS, React (Hooks) and TypeScript.",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "craco test",
    "test:e2e:cypress": "cypress run",
    "test:e2e": "start-server-and-test start http-get://localhost:3000 test:e2e:cypress",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint --fix . --ext .ts,.tsx src",
    "lint:styles": "stylelint \"./src/**/*.(scss)\" --fix",
    "update": "create-react-app-updater"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "i18next": "^17.0.8",
    "inversify-hooks": "^1.3.2",
    "node-sass": "^4.12.0",
    "normalize-scss": "^7.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hookstore": "^1.2.3",
    "react-i18next": "^10.11.5",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^5.2.4",
    "@types/jest": "24.0.16",
    "@types/node": "12.6.9",
    "@types/react": "16.8.24",
    "@types/react-css-modules": "^4.6.2",
    "@types/react-dom": "16.8.5",
    "@types/react-router-dom": "^4.3.4",
    "babel-plugin-react-css-modules": "^5.2.6",
    "craco-sass-resources-loader": "^1.1.0",
    "create-react-app-updater": "^0.7.13",
    "cypress": "^3.4.1",
    "eslint": "^5.12.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.2",
    "postcss-nested": "^4.1.2",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.16.4",
    "prettier-stylelint": "^0.4.2",
    "react-scripts": "3.0.1",
    "start-server-and-test": "^1.9.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.9.3",
    "typescript": "3.5.3"
  },
  "repository": "https://github.com/CKGrafico/Frontend-Boilerplates#frontend-boilerplates",
  "author": "https://github.com/CKGrafico/Frontend-Boilerplates#-contributors"
}
