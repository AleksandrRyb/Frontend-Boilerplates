{
  "name": "app-react",
  "description": "Stable version of a basic SPA example with SCSS, React (Hooks) and TypeScript.",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "react-app-rewired test",
    "test:e2e:cypress": "cypress run",
    "test:e2e": "start-server-and-test start http-get://localhost:3000 test:e2e:cypress",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "tslint \"./src/**/*.{ts,tsx}\" --format stylish",
    "lint:styles": "stylelint \"./src/**/*.scss\""
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.13.0",
    "@types/react": "16.8.12",
    "@types/react-dom": "16.8.3",
    "bootstrap": "^4.3.1",
    "node-sass": "^4.11.0",
    "normalize-scss": "^7.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "typescript": "3.4.2"
  },
  "devDependencies": {
    "cypress": "^3.2.0",
    "husky": "^1.3.1",
    "react-app-rewired": "^2.1.1",
    "start-server-and-test": "^1.7.13",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.5.4",
    "tslint": "^5.15.0",
    "tslint-react": "^4.0.0"
  },
  "repository": "https://github.com/CKGrafico/Frontend-Boilerplates#frontend-boilerplates",
  "author": "https://github.com/CKGrafico/Frontend-Boilerplates#-contributors"
}
